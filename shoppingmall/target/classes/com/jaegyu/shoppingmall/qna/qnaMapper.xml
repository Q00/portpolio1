<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jaegyu.shoppingmall.qna.qnaMapper">

	<select id="listqna" resultType="qnaDTO">
		select * from qna order by re_step asc
	</select>

	<select id="getqna" parameterType="int" resultType="qnaDTO">
		select * from qna where num=#{num}
	</select>

	<insert id="insertqna" parameterType="qnaDTO">
		insert into qna values(qna_seq.nextval,#{writer},
		#{email},#{subject},sysdate,0,#{content},#{ip},#{re_step},#{re_level})
	</insert>

	<update id="readCountPlus" parameterType="int">
		update qna set readcount=readcount+1 where num=#{num}
	</update>

	<delete id="deleteqna" parameterType="int">
		delete from qna where num=#{num}
	</delete>

	<update id="updateqna" parameterType="qnaDTO">
		update qna set
		writer=#{writer},subject=#{subject},email=#{email},content=#{content}
		where num=#{num}
	</update>
	<update id="restepCount" parameterType="java.util.HashMap">
		${sql}
	</update>
</mapper>